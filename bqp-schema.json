{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "binary quadratic program schema",
  "type": "object",
  "required":["id", "variable_ids", "variable_domain", "scale", "offset", "linear_terms", "quadratic_terms", "metadata"],
  "properties": {
    "id": {
      "type":"integer"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "dw_url":{
          "type":"string"
        },
        "dw_solver_name":{
          "type":"string"
        },
        "dw_chip_id":{
          "type":"string"
        },
        "chimera_cell_size":{
          "type":"integer"
        },
        "chimera_degree":{
          "type":"integer"
        },
        "generated":{
          "type":"string"
        },
        "dwig_generator":{
          "type":"string"
        }
      }
    },
    "variable_ids": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "variable_domain": {
      "type":"string",
      "enum":["spin", "boolean"]
    },
    "scale" : {
      "type": "number"
    },
    "offset" : {
      "type": "number"
    },
    "linear_terms": {
      "type": "array",
      "items": {
        "type": "object",
        "required":["id", "coeff"],
        "properties": {
          "id" : {
            "type": "integer"
          },
          "coeff":{
             "type": "number"
          }
        }
      }
    },
    "quadratic_terms": {
      "type": "array",
      "items": {
        "type": "object",
        "required":["id_head", "id_tail", "coeff"],
        "properties": {
          "id_head" : {
            "type": "integer"
          },
          "id_tail" : {
            "type": "integer"
          },
          "coeff":{
             "type": "number"
          }
        }
      }
    },
    "description":{
      "type": "string"
    },
    "solutions":{
      "type": "array",
      "items": {
        "type": "object",
        "required":["id", "assignment"],
        "properties": {
          "id" : {
            "type": "integer"
          },
          "description" : {
            "type": "string"
          },
          "evaluation" : {
            "type": "number"
          },
          "assignment": {
            "type": "array",
            "items": {
              "type": "object",
              "required":["id", "value"],
              "properties": {
                "id" : {
                  "type": "integer"
                },
                "value":{
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}